<html>
<head>
	<link rel="stylesheet" href="/css/bootstrap.css" type="text/css" />
	<link rel="stylesheet" href="/css/style.css" type="text/css" />
</head>

<body class="container">


    <nav class="navbar navbar-light bg-light">
         <a class="navbar-brand" href="/profiles">Home</a>
     </nav>

	<span>{{timestamp}}</span>
	<h1>Profiles</h1>
	<ol>
        <p>{{username}}</p>
		{{#profiles}}
			<li><a href="/profile/{{username}}">{{name}}</a></li>
		{{/profiles}}
	</ol>

	<form action="/addprofile" method="POST">
		<input type="text" name="name" placeholder="Name" /><br />
		<input type="text" name="username" placeholder="Username" /><br />
		<input type="text" name="image" placeholder="Image (/images/example.jpg)" /><br />
		<input type="text" name="company" placeholder="Company" /><br />
		<input type="text" name="languages" placeholder="Languages" /><br />
		<input id="btn-add-profile" type="submit" value="Add Profile" />
	</form>



	<script src="/js/jquery.js" type="text/javascript"></script>
	<script src="/js/app.js" type="text/javascript"></script>
</body>
<html>
